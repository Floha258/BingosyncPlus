{
  "manifest_version": 2,
  "name": "Bingosync+",
  "version": "1.0.4",
  "description": "Provides a couple improvements to Bingosync",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bingosync.com/room/*"
      ],
      "css": [
        "invasion.css"
      ],
      "js": [
        "invasion.js", "dom-to-img.min.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "Bingosync+",
    "default_popup": "pageAction/settings.html",
    "default_icon": "icons/icon-48.png",
    "show_matches": [
      "*://*.bingosync.com/room/*"
    ]
  },
  "permissions": [
    "storage",
    "browsingData"
  ],
  "web_accessible_resources": [
    "images/camera.svg"
  ]
}
